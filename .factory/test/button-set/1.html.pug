html(dir='ltr')
  head
    meta(charset='utf-8')
    meta(content='width=device-width' name='viewport')
    title Button Set with Arrow and Title
    link(href='../../index.min.css?v=%(version)' rel='stylesheet')
  body.has-gap(role='application')
    p
      span.button-set.has-items
        button.has-title.button
          span.button-title.title Button
    p
      span.button-set.has-items
        button.has-title.button
          span.button-title.title Browse
        button.has-title.button
          span.button-title.title Upload
        button.has-title.button
          span.button-title.title URL
    p
      span.button-set.has-items
        button.has-title.button
          span.button-title.title Insert
        button.has-arrow.button(aria-label='Options')
          span.arrow.button-arrow(role='none')
    script(src='../../index.min.js?v=%(version)')